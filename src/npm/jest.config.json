{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/test", "<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/*.d.ts"
  ],
  "moduleFileExtensions": ["ts", "js"]
}
